  "agentPrincipal": {
    "description": "The Agent Principal is a solo operator who orchestrates specialized AI agents to execute software development. The AP makes strategic decisions, approves key deliverables, and guides the overall direction while agents handle domain-specific execution.",
    "responsibilities": [
      "Define project vision and goals",
      "Approve strategic decisions and designs",
      "Review security findings and compliance",
      "Make trade-off decisions",
      "Guide overall product direction"
    ],
