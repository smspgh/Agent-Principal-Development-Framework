  "qualityGates": [
    {
      "id": "requirements-complete",
      "name": "Requirements Complete",
      "triggerPhase": 2,
      "checks": [
        {"check": "User stories defined", "deliverable": "user-stories"},
        {"check": "MVP scope documented", "deliverable": "mvp-scope"},
        {"check": "Success metrics set", "step": "1.1"}
      ]
    },
    {
      "id": "design-approved",
      "name": "Design Approved",
      "triggerPhase": 3,
      "checks": [
        {"check": "Wireframes complete", "deliverable": "wireframes"},
        {"check": "Design system defined", "deliverable": "design-system"},
        {"check": "Agent Principal approved", "approval": "design-system"}
      ]
    },
    {
      "id": "architecture-ready",
      "name": "Architecture Ready",
      "triggerPhase": 4,
      "checks": [
        {"check": "Database schema defined", "deliverable": "database-schema"},
        {"check": "API contracts documented", "deliverable": "api-specification"},
        {"check": "Security reviewed", "step": "1.9"}
      ]
    },
    {
      "id": "implementation-complete",
      "name": "Implementation Complete",
      "triggerPhase": 6,
      "checks": [
        {"check": "All features implemented", "phases": [4, 5]},
        {"check": "Unit tests passing", "deliverable": "unit-tests"},
        {"check": "No critical bugs", "blockers": "critical"}
      ]
    },
    {
      "id": "release-ready",
      "name": "Release Ready",
      "triggerPhase": 7,
      "checks": [
        {"check": "All tests passing", "phase": 6},
        {"check": "Security scan clean", "deliverable": "security-scan"},
        {"check": "Performance acceptable", "deliverable": "performance-tests"}
      ]
    },
    {
      "id": "launch-approved",
      "name": "Launch Approved",
      "triggerPhase": "production",
      "checks": [
        {"check": "Staging validated", "step": "7.4"},
        {"check": "Monitoring configured", "step": "7.7"},
        {"check": "Rollback ready", "deliverable": "rollback-automation"}
      ]
    }
  ],
  "glossary": {
    "AgentPrincipal": {
      "term": "Agent Principal",
      "definition": "A solo operator who orchestrates AI agents to build software. The AP provides strategic direction and approval while agents handle domain-specific execution."
    },
    "ADR": {
      "term": "Architecture Decision Record",
      "definition": "A document capturing an important architectural decision along with its context and consequences."
    },
    "CFD": {
      "term": "Cumulative Flow Diagram",
      "definition": "A visualization showing the quantity of work items in different states over time, used to identify bottlenecks."
    },
    "DAST": {
      "term": "Dynamic Application Security Testing",
      "definition": "Testing a running application for security vulnerabilities by simulating attacks."
    },
    "DoD": {
      "term": "Definition of Done",
      "definition": "A shared understanding of the criteria that must be met for work to be considered complete."
    },
    "IaC": {
      "term": "Infrastructure as Code",
      "definition": "Managing and provisioning infrastructure through machine-readable configuration files rather than manual processes."
    },
    "MTTD": {
      "term": "Mean Time To Detection",
      "definition": "The average time it takes to detect an incident or issue after it occurs."
    },
    "MTTR": {
      "term": "Mean Time To Recovery",
      "definition": "The average time it takes to restore service after an incident is detected."
    },
    "QualityGate": {
      "term": "Quality Gate",
      "definition": "A checkpoint that validates required conditions before proceeding to the next phase."
    },
    "RPO": {
      "term": "Recovery Point Objective",
      "definition": "The maximum acceptable amount of data loss measured in time."
    },
    "RTO": {
      "term": "Recovery Time Objective",
      "definition": "The target time within which a service must be restored after a disaster."
    },
    "SAST": {
      "term": "Static Application Security Testing",
      "definition": "Analyzing source code or binaries for security vulnerabilities without executing the application."
    },
    "SBOM": {
      "term": "Software Bill of Materials",
      "definition": "A comprehensive inventory of all software components, libraries, and dependencies in an application."
    },
    "SLI": {
      "term": "Service Level Indicator",
      "definition": "A quantitative measure of some aspect of the level of service being provided."
    },
    "SLO": {
      "term": "Service Level Objective",
      "definition": "A target value or range for a service level indicator."
    }
  },
