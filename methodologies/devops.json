{
  "methodologyId": "DEVOPS_CD",
  "name": "DevOps / Continuous Delivery",
  "description": "A methodology emphasizing collaboration between development and operations, automation, continuous integration/delivery, and rapid, reliable releases. Can be combined with Scrum or Kanban.",
  "characteristics": [
    "Automation-first mindset",
    "Continuous Integration and Delivery",
    "Infrastructure as Code",
    "Observability and monitoring",
    "Blameless post-mortems and learning culture"
  ],
  "bestFor": [
    "SaaS and cloud-native applications",
    "Teams shipping frequently (daily/weekly)",
    "Organizations with mature automation",
    "Products requiring high availability",
    "Teams practicing trunk-based development"
  ],
  "notIdealFor": [
    "Teams without automation capabilities",
    "Heavily regulated environments with manual gates",
    "Legacy systems without test coverage",
    "Organizations resistant to cultural change"
  ],
  "primaryRoles": ["DEVOPS", "SRE", "PLATFORM_ENGINEER", "TECH_LEAD"],
  "supportingRoles": ["DEV_TEAM", "SEC_ENGINEER", "QA_AUTOMATION"],
  "keyPractices": {
    "planning": "Small batches, feature flags for incomplete work",
    "requirements": "Vertical slices deployable independently",
    "changeManagement": "Automated pipelines, progressive rollouts",
    "testing": "Shift-left testing, automated at all levels",
    "documentation": "Documentation as code, runbooks"
  },
  "principles": [
    {
      "name": "Automate Everything",
      "description": "Build, test, deploy, and infrastructure should be automated"
    },
    {
      "name": "Ship Small, Ship Often",
      "description": "Small changes reduce risk and enable fast feedback"
    },
    {
      "name": "You Build It, You Run It",
      "description": "Teams own their services in production"
    },
    {
      "name": "Measure Everything",
      "description": "Decisions driven by metrics and observability"
    },
    {
      "name": "Embrace Failure",
      "description": "Learn from incidents through blameless post-mortems"
    }
  ],
